				}
			]
		}
	},

	"DELETE /api/comments/:comment_id": {
		"description": "serves data containing an empty object representing the deletion of the comment referenced by the comment_id argument",
		"queries": [1],
		"exampleResponse": {
			"articles": [{}]
		}
	},

