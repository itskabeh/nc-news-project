	"PATCH /api/articles/:article_id": {
		"description": "serves data for votes on an article updated by the number of votes passed",
		"queries": [],
		"exampleResponse": {
			"articles": [
				{
					"article_id": 1,
					"title": "Living in the shadow of a great man",
